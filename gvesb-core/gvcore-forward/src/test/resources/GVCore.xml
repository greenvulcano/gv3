        <LocalFSDataSource class="it.greenvulcano.gvesb.gvdte.config.LocalFSDataSource" formatHandled="xq" name="Default"
          repositoryHome="target/test-classes/gvdte/datasource/xq" type="datasource" />
      </DataSourceSet>
    </DataSourceSets>
    <Transformations>
    </Transformations>
  </GVDataTransformation>
  
</GVCore>
