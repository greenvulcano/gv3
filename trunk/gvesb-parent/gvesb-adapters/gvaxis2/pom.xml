<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>it.greenvulcano.gvesb.adapter</groupId>
        <artifactId>gvesb.adapters</artifactId>
        <version>3.5.0-SNAPSHOT</version>
    </parent>

    <groupId>it.greenvulcano.gvesb.adapter</groupId>
    <artifactId>gvaxis2</artifactId>
    <version>3.5.0-SNAPSHOT</version>
    <packaging>war</packaging>
    <name>GreenVulcano Axis2 WebServices Adapter</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <packagingExcludes>WEB-INF/lib/*.jar</packagingExcludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>it.greenvulcano.gvesb.commons</groupId>
            <artifactId>gvbase</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>it.greenvulcano.gvesb.adapter</groupId>
            <artifactId>gvdatahandler</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>it.greenvulcano.gvesb.vcl</groupId>
            <artifactId>gvvcl</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>it.greenvulcano.gvesb.core</groupId>
            <artifactId>gvcore-ode</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>it.greenvulcano.gvesb.commons</groupId>
            <artifactId>gvws_commons</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>it.greenvulcano.gvesb.commons</groupId>
            <artifactId>gvpolicy</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>it.greenvulcano.gvesb.commons</groupId>
            <artifactId>gvdte</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>it.greenvulcano.gvesb.util</groupId>
            <artifactId>gvstatistics</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>it.greenvulcano.gvesb.commons</groupId>
            <artifactId>gvthroughput</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.axis2</groupId>
            <artifactId>axis2-kernel</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.axis2</groupId>
            <artifactId>axis2-transport-http</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.openejb</groupId>
            <artifactId>openejb-http</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
