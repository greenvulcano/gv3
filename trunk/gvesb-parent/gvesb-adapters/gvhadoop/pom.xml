<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>gvesb.adapters</artifactId>
    <groupId>it.greenvulcano.gvesb</groupId>
    <version>3.5.0-Trunk</version>
  </parent>
  <groupId>it.greenvulcano.gvesb</groupId>
  <artifactId>gvhadoop</artifactId>
  <packaging>jar</packaging>
  <name>GreenVulcano ESB Hadoop HDFS Adapter</name>

  <dependencies>
    <dependency>
      <groupId>it.greenvulcano.gvesb</groupId>
      <artifactId>gvbase</artifactId>
    </dependency>
    <dependency>
      <groupId>it.greenvulcano.gvesb</groupId>
      <artifactId>gvvcl</artifactId>
    </dependency>
    <dependency>
      <groupId>it.greenvulcano.gvesb</groupId>
        <artifactId>gvvcl-file</artifactId>
    </dependency>

     <dependency>
        <groupId>org.apache.hadoop</groupId>
        <artifactId>hadoop-client</artifactId>
     </dependency>
     <dependency>
        <groupId>com.google.protobuf</groupId>
        <artifactId>protobuf-java</artifactId>
     </dependency>
  </dependencies>

  <!-- Tests only works with an installed and configured HDFS server!! -->
    <build>
       <pluginManagement>
           <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.6</version>
                    <configuration>
                        <skip>true</skip>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
