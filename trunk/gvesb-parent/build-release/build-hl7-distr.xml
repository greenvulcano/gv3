<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project [
   <!ENTITY libraries SYSTEM "../thirdparty/libraries.ent">
]>

<project name="Rules/Build Distribution">

    &libraries;

    <!-- ================================================================== -->
    <!-- Building                                                           -->
    <!-- ================================================================== -->

    <target name="build-hl7-dist" description="Builds the HL7 Adapter distribution">
        <antcall target="release"/>
    </target>

    <target name="release"
            depends="prepare, bundle-docs, bin-tgz, bin-zip"
            description="Creates the release binary from the distribution">
    </target>

    <target name="prepare">
        <delete dir="${release.root}"/>

        <mkdir dir="${release.root}"/>

        <!-- Copy standard files -->
        <filter token="base.dir" value="${release.id}"/>
        <copy todir="${release.root}" filtering="true"
              preservelastmodified="true" overwrite="true">
            <fileset dir="${basedir}/hl7">
                <include name="readme.*"/>
            </fileset>
        </copy>
        <copy todir="${release.root}" filtering="false"
              preservelastmodified="true" overwrite="true">
            <fileset dir="${basedir}/hl7">
                <include name="**"/>
                <exclude name="readme.*"/>
            </fileset>
        </copy>
        <copy todir="${release.dtds}" filtering="no"
              preservelastmodified="true" overwrite="true">
            <fileset dir="${basedir}/../gvesb/configuration/dtds">
                <include name="Extra/GVHL7.dtd"/>
            </fileset>
        </copy>

        <!-- Copy lib -->
        <!-- Copy EAR GVESB lib -->
        <copy todir="${release.ear.lib}" filtering="no"
              preservelastmodified="true" overwrite="true">
            <fileset dir="${gvesb.gvesb.lib}">
                <include name="gvhl7.jar"/>
            </fileset>
        </copy>
        <!-- Copy EAR lib -->
        <copy todir="${release.ear.lib}" filtering="no"
              preservelastmodified="true" overwrite="true">
            <fileset dir="${hapi.hapi.lib}">
                <include name="*.jar"/>
            </fileset>
        </copy>
    </target>

    <target name="bundle-docs" description="Include license, readme, etc">
        <!-- Copy the thirdparty/licenses to docs/licenses -->
        <!--<copy todir="${release.docs}/licenses"
              preservelastmodified="true" overwrite="true">
            <fileset dir="${basedir}/../thirdparty/licenses">
                <include name="**"/>
            </fileset>
        </copy>-->
        <!-- Copy the build/docs to the dist root -->
        <!--<copy todir="${release.gv}/docs/api">
            <fileset dir="${basedir}/javadocs"/>
        </copy>-->
    </target>

    <target name="bin-tgz" description="Build .tar.gz archive">
        <tar destfile="${module.output}/HL7_${release.id}.tar.gz"
             longfile="gnu" compression="gzip">
            <tarfileset dir="${release.root}" prefix="${release.id}"/>
        </tar>
        <checksum file="${module.output}/HL7_${release.id}.tar.gz"/>
        <checksum file="${module.output}/HL7_${release.id}.tar.gz" algorithm="SHA-256" />
    </target>

    <target name="bin-zip" description="Build zip archive">
        <zip destfile="${module.output}/HL7_${release.id}.zip">
            <zipfileset dir="${release.root}" prefix="${release.id}"/>
        </zip>
        <checksum file="${module.output}/HL7_${release.id}.zip"/>
        <checksum file="${module.output}/HL7_${release.id}.zip" algorithm="SHA-256" />
    </target>
</project>
