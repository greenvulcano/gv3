			Per weblogic il nome e': weblogic.Name; per JBoss e'
			jboss.server.name
		-->
        <ObjectNameProperty name="Location" value="StandardServerName" />
      </ObjectNameBuilder>
      <ObjectNameBuilder type="object-name-builder">
        <ObjectNameProperty name="Internal" value="No" />
      </ObjectNameBuilder>
      <ObjectNameBuilder name="ServiceOperationInfo" type="object-name-builder">
        <ObjectNameProperty name="Name" value="@{{IDService}}" />
      </ObjectNameBuilder>
      <ObjectNameBuilder name="ServiceOperationInfo_Internal" type="object-name-builder">
        <ObjectNameProperty name="Internal" value="Yes" />
        <ObjectNameProperty name="Name" value="@{{IDService}}#Internal" />
      </ObjectNameBuilder>
      <ObjectNameBuilder name="OperationInfo" type="object-name-builder">
        <ObjectNameProperty name="Name" value="@{{IDService}}#@{{IDOperation}}" />
      </ObjectNameBuilder>
      <ObjectNameBuilder name="OperationInfo_Internal" type="object-name-builder">
        <ObjectNameProperty name="Internal" value="Yes" />
        <ObjectNameProperty name="Name" value="@{{IDService}}#@{{IDOperation}}#Internal" />
      </ObjectNameBuilder>
      <ObjectNameBuilder name="ServiceOperationInfoManager_Internal" type="object-name-builder">
        <ObjectNameProperty name="Internal" value="Yes" />
      </ObjectNameBuilder>
      <ObjectNameBuilder name="JMXServiceManager_Internal" type="object-name-builder">
        <ObjectNameProperty name="Internal" value="Yes" />
      </ObjectNameBuilder>
      <ObjectNameBuilder apply-to-class="no-current-nor-descendent" class="it.greenvulcano.configuration.jmx.XMLConfigProxy"
        type="object-name-builder">
        <ObjectNameProperty name="Component" value="%{{class}}" />
        <ObjectNameProperty name="Type" value="%{{class}}" />
      </ObjectNameBuilder>
      <ObjectNameBuilder name="DomainInfo_Internal" type="object-name-builder">
        <ObjectNameProperty name="Internal" value="Yes" />
      </ObjectNameBuilder>
      <ObjectNameBuilder name="TaskManager_Internal" type="object-name-builder">
        <ObjectNameProperty name="Internal" value="Yes" />
      </ObjectNameBuilder>
    </ObjectNameBuilders>
    <Initializers>
      <generic-initializer class="it.greenvulcano.util.xpath.jmx.RegisterXPathReloader" target="StandardServerName"
        type="initializer" />
      <generic-initializer class="it.greenvulcano.configuration.jmx.RegisterXMLConfig" target="StandardServerName"
        type="initializer" />
      <generic-initializer class="it.greenvulcano.gvesb.core.jmx.RegisterServiceOperationInfoManager" target="StandardServerName"
        type="initializer" />
      <generic-initializer class="it.greenvulcano.gvesb.core.jmx.RegisterJMXServiceManager" target="StandardServerName"
