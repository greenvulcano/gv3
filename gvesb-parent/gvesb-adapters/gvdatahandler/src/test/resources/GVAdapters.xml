           <FieldFormatter decimal-separator="," field-id="4" grouping-separator="."
                           number-format="##0.00" type="field-formatter"/>
        </FieldFormatters>
        <FieldFormatters id="1">
           <FieldFormatter decimal-separator="," field-id="2" grouping-separator="."
                           number-format="##0.00" type="field-formatter"/>
        </FieldFormatters>
