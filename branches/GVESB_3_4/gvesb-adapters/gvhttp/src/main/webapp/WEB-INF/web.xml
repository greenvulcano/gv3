<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>gvhttp</display-name>
    <description>GreenVulcano HTTP Adapter</description>
    <servlet>
        <servlet-name>HttpInboundGateway</servlet-name>
        <description/>
        <servlet-class>it.greenvulcano.gvesb.adapter.http.HttpInboundGateway</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <!--<servlet>
        <servlet-name>ErrorHandler</servlet-name>
        <servlet-class>it.greenvulcano.gvesb.adapter.http.utils.ErrorHandler</servlet-class>
    </servlet>-->
    <servlet-mapping>
        <servlet-name>HttpInboundGateway</servlet-name>
        <url-pattern>/inbound/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HttpInboundGateway</servlet-name>
        <url-pattern>/secure/inbound/*</url-pattern>
    </servlet-mapping>
    <!--<servlet-mapping>
        <servlet-name>ErrorHandler</servlet-name>
        <url-pattern>/ErrorHandler</url-pattern>
    </servlet-mapping>-->
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>

    <!-- error-code related error pages -->
    <!--<error-page>
        <error-code>400</error-code>
        <location>/ErrorHandler</location>
    </error-page>-->

    <security-constraint>
        <display-name>GVHttp</display-name>
        <web-resource-collection>
            <web-resource-name>Secure Gateway</web-resource-name>
            <url-pattern>/secure/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>guest</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>gvhttp</realm-name>
    </login-config>

    <security-role>
        <role-name>guest</role-name>
    </security-role>
</web-app>
